    private void r2ActionPerformed(java.awt.event.ActionEvent evt) {                                   
        // TODO add your handling code here:
        String jk;
ta.setText("");
if(r1.isSelected()) {
jk=r1.getText();
}
else {
jk=r2.getText();
}
ta.append("Jenis Kelamin :"+jk+"\n");
    }                                  

