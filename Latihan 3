    private void ch1ActionPerformed(java.awt.event.ActionEvent evt) {                                    
        // TODO add your handling code here:
     // TODO add your handling code here:
String chobby1="",chobby2="",chobby3="",chobby="";
ta.setText("");
if (ch1.isSelected())
{
chobby += ch1.getText() + ", ";
}
if (ch2.isSelected())
{
chobby += ch2.getText() + ", ";
}
if (ch3.isSelected())
{
chobby += ch3.getText() + ", ";
}
if (chobby.equals("")) {
ta.append("Anda tidak memilih hobi");
} else {
chobby = chobby.substring(0, chobby.length()-2) + ".";
ta.append("Hobby : "+ chobby +"\n");
}
    }                                   

