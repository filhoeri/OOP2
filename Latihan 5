    private void r7ActionPerformed(java.awt.event.ActionEvent evt) {                                   
    }                                  

    private void BtnProsesActionPerformed(java.awt.event.ActionEvent evt) {                                          
        // TODO add your handling code here:
        String nama = tf.getText();
                
        String jk = "";
        if (r1.isSelected()){
            jk = r1.getText();
        }else if (r2.isSelected()){
            jk = r2.getText();
        }
        
        String agama = "";
        if (r3.isSelected()){
            agama = r3.getText();
        }else if (r4.isSelected()){
            agama = r4.getText();
        }else if (r5.isSelected()){
            agama = r5.getText();    
        }else if (r6.isSelected()){
            agama = r6.getText();
        }else if (r7.isSelected()){
            agama = r7.getText();
        }
        
        String hobby = "";
        if (ch1.isSelected()){
        hobby += ch1.getText() + ", ";
        }
        if (ch2.isSelected()){
        hobby += ch2.getText() + ", ";
        }
        if (!hobby.isEmpty()){
            hobby = hobby.substring(0, hobby.length() - 2);
        }else{
            hobby = "Anda Tidak Memilih Hobby.";
        }
        
        ta.setText("Nama: " + nama + "\n");
        ta.append("Jenis Kelamin: " + jk + "\n");
        ta.append("Agama: " + agama + "\n");
        ta.append("Hobby: " + hobby + "\n");
    }                                         

