    private void tf2ActionPerformed(java.awt.event.ActionEvent evt) {                                    
        // TODO add your handling code here:
        int awal=Integer.parseInt(tf1.getText());
int akir=Integer.parseInt(tf2.getText());
ta.select(awal,akir);
    }                                   

