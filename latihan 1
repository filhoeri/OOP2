    private void BtnTambahActionPerformed(java.awt.event.ActionEvent evt) {                                          
        // TODO add your handling code here:
        String s="BANDUNG";
ta1.setText("");
ta1.append("String :"+s+"\n");
    }                                         

    private void BtnSisipActionPerformed(java.awt.event.ActionEvent evt) {                                         
        // TODO add your handling code here:
        String s=TF1.getText();
int p=Integer.parseInt(TF2.getText());
ta1.insert(s,p);
    }                                        

    private void BtnTimpaActionPerformed(java.awt.event.ActionEvent evt) {                                         
        // TODO add your handling code here:private void jButton3ActionPerformed(java.awt.event.ActionEvent evt)
{
String s=TF1.getText();
int p=Integer.parseInt(TF2.getText());
ta1.replaceRange(s,p,p+5);
}        
    }                                        

